<h1>Order Details</h1>

<p><strong>Order ID:</strong> <%= @order.id %></p>
<p><strong>Date:</strong> <%= @order.created_at.strftime("%B %d, %Y %H:%M") %></p>
<p><strong>Total Price:</strong> $<%= @order.total_price %></p>

<h2>Order Items</h2>
<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.price %></td>
        <td>$<%= item.price * item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
